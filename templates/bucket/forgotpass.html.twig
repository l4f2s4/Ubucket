{% extends 'userbase.html.twig' %}

{% block title %}Welcome To UBUCKET Forgot Password Area{% endblock %}

{% block body %}
{% include('includes/unavbar.html.twig') %}
<div class="mdc-layout-grid">
       <div class="mdc-layout-grid__inner">
          <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
                <div class="mdc-card">
                   <div class="mdc-layout-grid__inner">
                        <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-7">
                           <section class="purchase__card_section">
                               <div class="card card-signin my-5"  style="background:#00a;color:lightgrey;">
                                   <div class="card-body">
                                      <h1 class="card-title text-center font-weight-bold">
                                        Verification  Info!
                                      </h1>
                                        <div class="mt-4 font-weight-bold font-14">
                                          <p>
                                              <b style="display:block;">Enter your email to get a password reset link</b>
                                              <br/>

                                              <span style="display:block;text-indent:15px;" >* We much appreciate your support.</span>

                                          </p>
                                        </div>
                                   </div>
                               </div>
                           </section>
                        </div>


     <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-5">
       <section class="purchase__card_section">
        <div class="card card-signin my-5">
          <div class="card-body">
            <form class="form-signin" method="post">
                 {% for messages in app.flashes('verify') %}
		     		  <p class="text-center text-danger">
                            {{ messages }}
					  </p>
				    {% endfor %}

              <div class="form-label-group">
                <input type="email"   name="kind" id="inputEmail" placeholder="Enter email" class="form-control"  required autofocus>
                <label for="inputEmail">Email Address</label>
              </div>
              <button class="form-control btn btn-lg btn-success btn-block text-uppercase" type="submit">Find Account</button>
            </form>
          </div>
        </div>
       </section>
      </div>
    </div>
    </div>
 </div>
 </div>
 </div>
 </main>
</div>


  <!--end reset builder -->
{% endblock %}

