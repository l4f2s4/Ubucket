{% extends 'userbase.html.twig' %}
{% block body %}
{% if app.user %}
     {% if app.user.title == 'administrator'%}
      {{ include("profile/usermenu.html.twig") }}
   {% else %}
    {{ include("includes/usermenu.html.twig") }}
   {% endif%}
  <div class="page-wrapper mdc-toolbar-fixed-adjust">
      <!-- start main page -->
      <main class="content-wrapper">
       <!-- Profile intro -->
         <div class="mdc-layout-grid">
          <div class="mdc-layout-grid__inner">
            <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
              <div class="mdc-card">
                <div class="mdc-layout-grid__inner">
                  <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-10">
                    <section class="purchase__card_section">
                      <p>
                        <span class="font-weight-bold">Update Password</span>
                      </p>
                    </section>
                  </div>
                </div>
              </div>
            </div>
           </div>
       <!-- end intro -->

       <!-- start form -->
             <div class="mdc-layout-grid__cell stretch-card mdc-layout-grid__cell--span-12">
              <div class="mdc-card">
               <section class="mdc-card__supporting-text">
               <!-- form start -->
                <form  action="#" method="post" class="mt-5">
                  <div class="mdc-layout-grid__inner">
                  <!--current -->
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop">
                      <div class="template-demo">
                        <div id="demo-tf-box-leading-wrapper">
                          <div id="tf-box-leading-test" class="mdc-text-field mdc-text-field--box mdc-text-field--with-leading-icon w-100">
                               <input type="password" placeholder="Enter current password"name="oldpass"  class="mdc-text-field__input">
                            <div class="mdc-text-field__bottom-line"></div>
                          </div>
                            <p class="mdc-text-field-helper-text--validation-msg text-red" id="name-validation-msg" style="font-size:.75rem;">
                               {% for messages in app.flashes('current') %}
                                    {{ messages}}
                               {% endfor %}
                          </p>
                        </div>
                      </div>
                    </div>
                   <!-- new password-->
                    <div class="mdc-layout-grid__cell mdc-layout-grid__cell--span-4-desktop">
                      <div class="template-demo">
                        <div id="demo-tf-box-leading-wrapper">
                          <div id="tf-box-leading-example" class="mdc-text-field mdc-text-field--box mdc-text-field--with-leading-icon w-100">
                            <input required pattern=".{8,}" type="password" name="newpass" id="tf-box-leading" class="mdc-text-field__input" aria-controls="name-validation-message">
                            <label for="tf-box-leading" class="mdc-text-field__label">Enter new password</label>
                            <div class="mdc-text-field__bottom-line"></div>
                          </div>
                            <p class="mdc-text-field-helper-text mdc-text-field-helper-text--validation-msg" id="name-validation-msg">
                            Must be at least 8 characters
                          </p>
                        </div>
                      </div>
                    </div>
                  <!-- end new password-->
                  <!-- confirm password -->
                    <div class="mdc-layout-grid__cell  mdc-layout-grid__cell--span-4-desktop">
                      <div class="template-demo">
                        <div id="demo-tf-box-wrapper">
                          <div id="tf-box-example" class="mdc-text-field mdc-text-field--box w-100">
                            <input required pattern=".{8,}" type="password" id="tf-box" name="conf" class="mdc-text-field__input" aria-controls="name-validation-message">
                            <label for="tf-box" class="mdc-text-field__label mt-4">Repeat Password</label>
                            <div class="mdc-text-field__bottom-line"></div>
                          </div>
                          <p class="mdc-text-field-helper-text--validation-msg text-red" id="name-validation-msg" style="font-size:.75rem;">
                               {% for messages in app.flashes('mismatch') %}
                                    {{ messages}}
                               {% endfor %}
                          </p>
                        </div>
                       </div>
                     </div>
                    <!-- end confirm password-->
                    <!-- message action -->
                     <div class="mdc-layout-grid__cell  mdc-layout-grid__cell--span-6-desktop">
                          <p class="align-item-center">
                              <i class="material-icons mdc-theme--secondary icon-md">SN</i>
                               <span class="mdc-card__title mdc-card__title--middle text-lowercase text-center">
                               Security note "stronger password is better than weak password"</span>
                          </p>
                     </div>
                    <!-- end message action -->
                    <!-- submit action -->
                     <div class="mdc-layout-grid__cell  mdc-layout-grid__cell--span-3-desktop">
                          <p class="align-item-center">
                                   <button type="submit" class="mdc-button mdc-button--raised secondary-filled-button text-lowercase mb-0" data-mdc-auto-init="MDCRipple">
                                        Update password
                                    </button>
                               </p>
                     </div>
                    <!-- end submit action -->

                   </form>
                   <!-- end form -->
                 </section>
                 </div>
                 </div>

         <!-- end form -->

      </main>
      <!-- end main page -->
  </div>
{% endif %}
{% endblock %}